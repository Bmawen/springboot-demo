<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinhx.shardingjdbc.mapper.UserMapper">

    <select id="selectByAge" parameterType="java.lang.Long" resultType="com.jinhx.shardingjdbc.entity.User">
        select * from user where age = #{age};
    </select>

    <select id="selectById" parameterType="java.lang.Long" resultType="com.jinhx.shardingjdbc.entity.User">
        select * from user where id = #{id};
    </select>

    <insert id="insertUser" parameterType="com.jinhx.shardingjdbc.entity.User">
        insert into user (id, name, age, email) values (#{id}, #{name}, #{age}, #{email});
    </insert>

</mapper>
